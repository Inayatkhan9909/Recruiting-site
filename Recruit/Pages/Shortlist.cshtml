@page
@model Recruit.Pages.ShortlistModel
@{
}


<div class="table_cover_Reject">

    <table>

        <h1>List of Candidates Shortlisted</h1>

       <thead>

          <th>Application no</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>DOB</th>
          <th>Qualification</th>
          <th>Skills</th>
          <th>Applied for</th>
          <th>Date</th>
          <th>Status</th>

     </thead>
        <tbody>

            @foreach (var items in Model.shortlisted)
            {
                <tr>
                    <td>@items.Form_no</td>
                    <td>@items.firstname</td>
                    <td>@items.lastname</td>
                    <td>@items.email</td>
                    <td>@items.dob</td>
                    <td>@items.qualification</td>
                    <td>@items.skills</td>
                    <td>@items.job</td>
                    <td>@items.Created_at</td>
                    <td>Shortlisted</td>

                </tr>

            }



        </tbody>


    </table>


</div>