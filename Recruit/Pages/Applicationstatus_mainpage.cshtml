@page
@model Recruit.Pages.Applicationstatus_mainpageModel
@{
}



<div class="apply_all_div">

    <h1>Applicant Details</h1>
    <p>Form Number: @Model.Formno</p>
   

    <form method="post">



        <div class="s_details">
            <div class="L_title">
                <h1>Recruit</h1>
                <h3>Get the job you desirve</h3>
            </div>

            <div class="details_div fn">
                <label for="Form_no">Application No</label>
                <input type="text" name="Form_no" id="Form_no" value="@Model.Formno"  disabled>
            </div>

            <div class="details_div fn">
                <label for="firstname">First Name</label>
                <input type="text" name="firstname" id="firstname" value="@Model.ur.firstname" required>
            </div>

            <div class="details_div ln">
                <label for="lastname">Last Name</label>
                <input type="text" name="lastname" id="lastname" value="@Model.ur.lastname" required>
            </div>

            <div class="details_div em">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" value="@Model.ur.email" required>
            </div>

            <div class="details_div ps">
                <label for="dob">DOB </label>
                <input type="date" name="dob" value="@Model.ur.dob" id="dob">
            </div>

            <div class="details_div ps">
                <label for="qualification">Qualification</label>
                <input type="text" name="qualification" id="qualification" value="@Model.ur.qualification">
            </div>


            <div class="details_div ps">
                <label for="skills">Skills</label>
                <input type="text" name="skills" id="skills " value="@Model.ur.skills">
            </div>

            <div class="details_div ps">
                <label for="job">Job to apply for</label>
                <input type="text" name="job" id="job" value="@Model.ur.job">
            </div>







        </div>

        <div class="btn_signup">
            <button>Apply</button>
        </div>


        @if (Model.successMessage.Length > 0)
        {
            <div class=" alert alert-success alert-dismissible fade show " role="alert">


                <strong> @Model.successMessage</strong>



                <button type="button" class=" btn-close" data-bs-dismiss="alert" aria-label="close"></button>
            </div>
        }


        @if (Model.errorMessage.Length > 0)
        {
            <div class=" alert alert-warning alert-dismissible fade show " role="alert">
                <strong> @Model.errorMessage</strong>
                <button type="button" class=" btn-close" data-bs-dismiss="alert" aria-label="close"></button>
            </div>
        }


    </form>

</div>